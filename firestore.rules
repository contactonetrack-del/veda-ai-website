rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- USER PROFILES ---
    // Strict: Authenticated users can only read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // --- CALORIE LOGS ---
    // Strict: Users can only access logs where they are the owner
    // Create rule enforces that new docs must have correct userId
    match /calorie_logs/{logId} {
      allow read, update, delete: if request.auth != null && 
                                    request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
                      request.auth.uid == request.resource.data.userId;
    }
    
    // --- HEALTH METRICS ---
    // Strict: Owner-only access for BMI, weight logs, etc.
    match /health_metrics/{metricId} {
      allow read, write: if request.auth != null && 
                           request.auth.uid == resource.data.userId;
    }
    
    // --- INSURANCE DATA ---
    // Strict: Owner-only access for insurance quotes/policies
    match /insurance_data/{dataId} {
      allow read, write: if request.auth != null && 
                           request.auth.uid == resource.data.userId;
    }

    // --- CHAT HISTORY ---
    // Strict: Owner-only access for chat messages
    match /chats/{chatId} {
       allow read, write: if request.auth != null && 
                            request.auth.uid == resource.data.userId;
    }
    
    // --- DEFAULT DENY ---
    // Critical: Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
